<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        li{
            list-style: none;
        }
        body {
            background: #37404a;
        }
        a{
            text-decoration: none;
        }
    </style>
</head>

<body>
    <% user.forEach(user=> {%>
        <nav class="bg-light d-flex align-items-center justify-content-between">
            <div class="logo">
                <h2>
                    <%= user.username %>
                </h2>
            </div>
            <ul class="nav-links m-0 d-flex align-items-center justify-content-between">
                <li>
                    <a href="/home" target="_blank">
                        back home
                    </a>
                </li>
            </ul>
        </nav>
        <div class="container">
            <div class="container">
                <div class="row">
                    <h2 class="text-center"> projects</h2>
                    <% }) %>
                        <% if (projects) { projects.forEach(project=> { %>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="card my-1">
                                    <div class="cart-header rounded p-2 bg-secondary text-light">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <p class="m-0 text-center">
                                                <%= project.user %>
                                            </p>
                                            <p class="m-0 text-center">
                                                <%= project.id %>
                                            </p>
                                        </div>
                                        <%= project.name %>
                                    </div>
                                    <div class="card-body">
                                        <p class="m-0">
                                            <%= project.description %>
                                        </p>
                                    </div>
                                    <div class="card-footer">
                                        <a class="btn btn-primary w-100" href="/comments/<%= project.id %>">
                                            comments</a>
                                    </div>
                                </div>
                            </div>
                            <%})} else { %>
                                <h2 class="text-center">has no project</h2>
                                <% } %>
                </div>
            </div>
        </div>
</body>

</html>